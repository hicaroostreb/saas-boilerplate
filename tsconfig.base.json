{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@workspace/database": ["packages/database/src"],
      "@workspace/database/*": ["packages/database/src/*"],
      "@workspace/auth": ["packages/auth/src"],
      "@workspace/auth/*": ["packages/auth/src/*"],
      "@workspace/billing": ["packages/billing/src"],
      "@workspace/billing/*": ["packages/billing/src/*"]
    }
  },
  "references": [
    { "path": "packages/database" },
    { "path": "packages/auth" },
    { "path": "packages/billing" }
  ]
}
