# ============================================
# DATABASE - SUPABASE
# ============================================

# Direct connection (porta 5432) - APENAS para migrations e scripts
# Formato: postgresql://postgres:[password]@db.[project-id].supabase.co:5432/postgres
DIRECT_DATABASE_URL="postgresql://postgres:your-password@db.your-project-id.supabase.co:5432/postgres"

# Pooler connection (porta 6543) - Para runtime da aplicação (Next.js, API routes)
# Formato: postgresql://postgres:[password]@db.[project-id].supabase.co:6543/postgres
DATABASE_URL="postgresql://postgres:your-password@db.your-project-id.supabase.co:6543/postgres"

# ============================================
# AUTH - AUTH.JS / NEXTAUTH
# ============================================

# URL da aplicação (dashboard/admin)
NEXTAUTH_URL="http://localhost:3001"

# Secret key para JWT tokens (gere com: openssl rand -base64 32)
NEXTAUTH_SECRET="your-nextauth-secret-key-min-32-chars"

# Auth.js v5 secret (mesma que NEXTAUTH_SECRET)
AUTH_SECRET="your-auth-secret-key-min-32-chars"

# ============================================
# PAYMENT - STRIPE
# ============================================

# Stripe secret key (sk_test_... para desenvolvimento, sk_live_... para produção)
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"

# Stripe webhook secret (whsec_... - obtido no Stripe Dashboard)
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# Public key do Stripe (opcional, para client-side)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"

# ============================================
# APP CONFIGURATION
# ============================================

# URL pública da aplicação (frontend)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# URL do dashboard/admin
NEXT_PUBLIC_DASHBOARD_URL="http://localhost:3001"

# Nome da aplicação
NEXT_PUBLIC_APP_NAME="SaaS Boilerplate"

# ============================================
# SUPABASE (Opcional - se usar Supabase Auth/Storage)
# ============================================

# URL pública do projeto Supabase
NEXT_PUBLIC_SUPABASE_URL="https://your-project-id.supabase.co"

# Anon key pública (pode ser exposta no client)
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"

# Service role key (NUNCA expor no client! Backend only)
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# ============================================
# ENVIRONMENT
# ============================================

# Ambiente (development, staging, production)
NODE_ENV="development"

# ============================================
# EMAIL (Opcional - ex: Resend, SendGrid)
# ============================================

# RESEND_API_KEY="re_your-resend-api-key"
# EMAIL_FROM="noreply@yourdomain.com"

# ============================================
# STORAGE (Opcional - se não usar Supabase Storage)
# ============================================

# AWS S3
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# AWS_REGION="us-east-1"
# AWS_S3_BUCKET="your-bucket-name"

# ============================================
# OBSERVABILITY (Opcional)
# ============================================

# Sentry
# SENTRY_DSN="https://your-sentry-dsn"
# NEXT_PUBLIC_SENTRY_DSN="https://your-public-sentry-dsn"

# PostHog
# NEXT_PUBLIC_POSTHOG_KEY="phc_your-posthog-key"
# NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# ============================================
# NOTES
# ============================================

# Como gerar secrets:
# - NEXTAUTH_SECRET: openssl rand -base64 32
# - AUTH_SECRET: openssl rand -base64 32
#
# Onde obter credenciais:
# - Supabase: https://app.supabase.com/project/[project-id]/settings/database
# - Stripe: https://dashboard.stripe.com/test/apikeys
# - Resend: https://resend.com/api-keys
#
# Portas padrão:
# - 3000: Next.js app (frontend)
# - 3001: Next.js dashboard (admin)
# - 5432: PostgreSQL direct connection
# - 6543: PostgreSQL pooler (PgBouncer)
