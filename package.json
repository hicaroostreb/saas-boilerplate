{
  "name": "@workspace/root",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.12.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "db:setup": "node scripts/setup.js",
    "db:migrate": "pnpm --filter @workspace/database run migrate",
    "db:seed": "pnpm --filter @workspace/database run seed",
    "db:studio": "pnpm --filter @workspace/database run studio",
    "setup": "pnpm install && pnpm db:setup && pnpm db:migrate && pnpm db:seed"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.57.4",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "jose": "^6.1.0",
    "next": "^15.5.3",
    "next-auth": "^4.24.11",
    "postgres": "^3.4.7",
    "stripe": "^12.18.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/stripe-v2": "^2.0.6",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "turbo": "^1.13.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1"
  }
}
