{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./src/*"],
      "@/types": ["./src/types/index"],
      "@/types/*": ["./src/types/*"],
      "@/utils": ["./src/utils/index"],
      "@/utils/*": ["./src/utils/*"],
      "@/services": ["./src/services/index"],
      "@/services/*": ["./src/services/*"],
      "@/repositories": ["./src/repositories/index"],
      "@/repositories/*": ["./src/repositories/*"],
      "@/config/*": ["./src/config/*"],
      "@/gateways/*": ["./src/gateways/*"],
      "@/handlers/*": ["./src/handlers/*"],
      "@workspace/database": ["../database/src"],
      "@workspace/database/*": ["../database/src/*"],
      "@workspace/common": ["../common/src"],
      "@workspace/common/*": ["../common/src/*"],
      "@workspace/routes": ["../routes/src"],
      "@workspace/routes/*": ["../routes/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "build", "**/*.test.*", "**/*.spec.*"],
  "references": [{ "path": "../database" }, { "path": "../common" }, { "path": "../routes" }]
}
