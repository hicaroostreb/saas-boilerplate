{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./src/*"],
      "@/core": ["./src/core/index"],
      "@/core/*": ["./src/core/*"],
      "@/adapters": ["./src/adapters/index"],
      "@/adapters/*": ["./src/adapters/*"],
      "@/lib": ["./src/lib/index"],
      "@/lib/*": ["./src/lib/*"],
      "@/types": ["./src/types/index"],
      "@/types/*": ["./src/types/*"],
      "@/utils": ["./src/utils/index"],
      "@/utils/*": ["./src/utils/*"],
      "@workspace/database": ["../database/src"],
      "@workspace/database/*": ["../database/src/*"],
      "@workspace/common": ["../common/src"],
      "@workspace/common/*": ["../common/src/*"],
      "@workspace/routes": ["../routes/src"],
      "@workspace/routes/*": ["../routes/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "build", "**/*.test.*", "**/*.spec.*"],
  "references": [{ "path": "../database" }, { "path": "../common" }, { "path": "../routes" }]
}
