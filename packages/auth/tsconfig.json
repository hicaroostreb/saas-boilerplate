{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./src/*"],
      "@workspace/database": ["../database/src"],
      "@workspace/database/*": ["../database/src/*"],
      "@workspace/common": ["../common/src"],
      "@workspace/common/*": ["../common/src/*"],
      "@workspace/http": ["../http/src"],
      "@workspace/http/*": ["../http/src/*"]
    }
  },
  "include": ["src/**/*", "src/index.ts", "src/server.ts"],
  "exclude": ["node_modules", "dist", "build", "**/*.test.*", "**/*.spec.*"],
  "references": [{ "path": "../database" }, { "path": "../common" }, { "path": "../http" }]
}
