{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@workspace/database": ["../database/src"],
      "@workspace/database/*": ["../database/src/*"],
      "@workspace/auth": ["../auth/src"],
      "@workspace/auth/*": ["../auth/src/*"],
      "@workspace/common": ["../common/src"],
      "@workspace/common/*": ["../common/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "build", "**/*.test.*", "**/*.spec.*"],
  "references": [{ "path": "../database" }, { "path": "../auth" }, { "path": "../common" }]
}
