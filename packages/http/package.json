{
  "name": "@workspace/http",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --build",
    "dev": "tsc --watch",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "test": "echo '⚠️ Tests not configured yet'",
    "clean": "rm -rf dist .turbo node_modules"
  },
  "dependencies": {
    "next": "^15.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@workspace/typescript-config": "workspace:*",
    "@workspace/eslint-config": "workspace:*",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "@types/node": "^20.0.0"
  },
  "peerDependencies": {
    "next": ">=15.0.0"
  },
  "optionalDependencies": {
    "@workspace/rate-limiter": "workspace:*"
  }
}
