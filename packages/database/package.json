{
  "name": "@workspace/database",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schemas": {
      "types": "./dist/schemas/index.d.ts",
      "import": "./dist/schemas/index.js"
    },
    "./entities": {
      "types": "./dist/entities/index.d.ts",
      "import": "./dist/entities/index.js"
    },
    "./repositories": {
      "types": "./dist/repositories/index.d.ts",
      "import": "./dist/repositories/index.js"
    },
    "./repositories/contracts": {
      "types": "./dist/repositories/contracts/index.d.ts",
      "import": "./dist/repositories/contracts/index.js"
    },
    "./connection": {
      "types": "./dist/connection/index.d.ts",
      "import": "./dist/connection/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "db:push": "drizzle-kit push --force",
    "db:studio": "drizzle-kit studio --host 0.0.0.0 --port 3001",
    "db:seed": "bun run src/scripts/seed.ts"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.44.6",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "drizzle-kit": "^0.31.5",
    "typescript": "^5.9.2"
  }
}
