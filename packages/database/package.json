{
  "name": "@workspace/database",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schemas": {
      "types": "./dist/schemas/index.d.ts",
      "import": "./dist/schemas/index.js"
    },
    "./entities": {
      "types": "./dist/entities/index.d.ts",
      "import": "./dist/entities/index.js"
    },
    "./repositories": {
      "types": "./dist/repositories/index.d.ts",
      "import": "./dist/repositories/index.js"
    },
    "./repositories/contracts": {
      "types": "./dist/repositories/contracts/index.d.ts",
      "import": "./dist/repositories/contracts/index.js"
    },
    "./connection": {
      "types": "./dist/connection/index.d.ts",
      "import": "./dist/connection/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "echo '✅ Database lint disabled - contains generated code and scripts'",
    "format": "echo '✅ Database format disabled - contains generated code and scripts'",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:pull": "drizzle-kit pull",
    "db:studio": "drizzle-kit studio",
    "db:drop": "drizzle-kit drop",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:seed:framework": "tsx src/seeders/index.ts",
    "db:seed:dev": "NODE_ENV=development tsx src/seeders/index.ts",
    "db:seed:prod": "NODE_ENV=production tsx src/seeders/index.ts",
    "db:seed:test": "NODE_ENV=test tsx src/seeders/index.ts",
    "db:reset": "pnpm db:drop && pnpm db:push && pnpm db:seed",
    "db:health": "tsx -e \"import('./dist/index.js').then(m => m.checkDatabaseHealth().then(console.log))\""
  },
  "dependencies": {
    "@types/pg": "^8.11.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.14.0",
    "drizzle-kit": "^0.31.5",
    "tsx": "^4.19.0",
    "typescript": "^5.9.2"
  }
}
