{
  "name": "@workspace/marketing",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev --port 3000",
    "build": "next build",
    "start": "next start --port 3000",
    "lint": "eslint . --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "echo '⚠️ Tests not configured yet'",
    "clean": "rm -rf .next .turbo node_modules coverage out",
    "clean:cache": "rm -rf .next/cache .turbo/cache",
    "clean:build": "rm -rf .next out",
    "reset": "bun run clean && bun install",
    "analyze": "ANALYZE=true next build",
    "export": "next build && next export",
    "lighthouse": "lighthouse http://localhost:3000 --output json --output html --output-path ./lighthouse-report",
    "seo:check": "next-sitemap && lighthouse http://localhost:3000 --only-categories=seo --output json"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@workspace/common": "workspace:*",
    "@workspace/rate-limiter": "workspace:*",
    "@workspace/routes": "workspace:*",
    "@workspace/ui": "workspace:*",
    "clsx": "^2.1.1",
    "framer-motion": "^11.0.0",
    "lucide-react": "^0.544.0",
    "next": "^15.5.4",
    "next-seo": "^6.5.0",
    "next-themes": "^0.4.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.63.0",
    "sharp": "^0.33.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.5.4",
    "@types/node": "^20.14.0",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.36.0",
    "lighthouse": "^11.0.0",
    "next-sitemap": "^4.2.3",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.5.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.17.0",
    "bun": ">=1.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not IE 11",
    "not op_mini all"
  ]
}
