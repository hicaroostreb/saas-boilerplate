{
  "extends": "@workspace/typescript-config/nextjs.json",
  "compilerOptions": {
    "paths": {
      "@workspace/ui": ["../../packages/ui/src"],
      "@workspace/common": ["../../packages/common/src"],
      "@workspace/routes": ["../../packages/routes/src"],
      "@workspace/rate-limiter": ["../../packages/rate-limiter/src"]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/ui/src/**/*.ts",
    "../../packages/ui/src/**/*.tsx",
    "../../packages/common/src/**/*.ts",
    "../../packages/routes/src/**/*.ts",
    "../../packages/rate-limiter/src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
