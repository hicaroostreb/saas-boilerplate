{
  "extends": "./tsconfig.base.json",
  "files": [],
  "include": [],
  "exclude": [
    "node_modules",
    "**/.next",
    "**/dist",
    "**/build",
    "**/.turbo",
    "**/coverage",
    "**/test-results",
    "**/playwright-report",
    "**/*.config.js",
    "**/*.config.mjs"
  ],
  "references": [
    // Foundation Layer
    { "path": "packages/common" },
    { "path": "packages/http" },
    { "path": "packages/shared" },

    // Infrastructure Layer
    { "path": "packages/rate-limiter" },
    { "path": "packages/database" },

    // Domain Services Layer
    { "path": "packages/auth" },
    { "path": "packages/billing" },
    { "path": "packages/webhooks" },

    // Application Layer
    { "path": "packages/ui" },

    // Apps Layer
    { "path": "apps/marketing" },
    { "path": "apps/dashboard" },

    // Testing
    { "path": "packages/e2e" },

    // Tooling
    { "path": "tooling/eslint-config" },
    { "path": "tooling/prettier-config" },
    { "path": "tooling/requirements-check" },
    { "path": "tooling/tailwind-config" },
    { "path": "tooling/typescript-config" }
  ],
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "tsBuildInfoFile": ".turbo/tsconfig.tsbuildinfo"
  },
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "Node"
    }
  }
}
