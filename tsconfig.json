{
  "extends": "./tsconfig.base.json",
  "files": [],
  "include": [],
  "exclude": [
    "node_modules",
    "**/.next",
    "**/dist",
    "**/build",
    "**/.turbo",
    "**/coverage",
    "**/test-results",
    "**/playwright-report",
    "**/*.config.js",
    "**/*.config.mjs"
  ],
  "references": [
    { "path": "packages/database" },
    { "path": "packages/auth" },
    { "path": "packages/billing" },
    { "path": "packages/common" },
    { "path": "packages/routes" },
    { "path": "packages/ui" },
    { "path": "packages/rate-limiter" },
    { "path": "packages/e2e" },
    { "path": "tooling/eslint-config" },
    { "path": "tooling/prettier-config" },
    { "path": "tooling/requirements-check" },
    { "path": "tooling/tailwind-config" },
    { "path": "tooling/typescript-config" },
    { "path": "apps/dashboard" },
    { "path": "apps/marketing" }
  ],
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "tsBuildInfoFile": ".turbo/tsconfig.tsbuildinfo"
  },
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "Node"
    }
  }
}
