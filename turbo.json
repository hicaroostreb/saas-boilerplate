{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": [
    "**/.env.*local",
    ".env",
    ".env.example",
    "turbo.json",
    "package.json",
    "bun.lockb",
    "eslint.config.js",
    "prettier.config.js",
    "tailwind.config.js"
  ],
  "globalEnv": [
    "NODE_ENV",
    "DATABASE_URL",
    "AUTH_SECRET",
    "EMAIL_FROM",
    "EMAIL_FROM_NAME",
    "SUPPORT_EMAIL",
    "NEXTAUTH_URL",
    "NEXT_PUBLIC_APP_URL",
    "CI",
    "VERCEL_ENV",
    "STRIPE_WEBHOOK_SECRET",
    "STRIPE_SECRET_KEY",
    "STRIPE_PUBLISHABLE_KEY",
    "TURBO_TOKEN",
    "TURBO_TEAM",
    "BASE_URL",
    "REDIS_URL"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "app/**",
        "pages/**",
        "components/**",
        "lib/**",
        "actions/**",
        "schemas/**",
        "public/**",
        "styles/**",
        "next.config.*",
        "tailwind.config.*",
        "tsconfig.json",
        "package.json"
      ],
      "outputs": [".next/**", "!.next/cache/**", "!.next/standalone/**", ".vercel/**", "dist/**", "build/**"],
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "AUTH_SECRET",
        "NEXTAUTH_URL",
        "NEXT_PUBLIC_APP_URL",
        "STRIPE_WEBHOOK_SECRET",
        "STRIPE_SECRET_KEY",
        "STRIPE_PUBLISHABLE_KEY",
        "VERCEL_ENV",
        "REDIS_URL"
      ],
      "cache": true,
      "persistent": false,
      "passThroughEnv": ["ANALYZE"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": [
        "src/**",
        "app/**",
        "pages/**",
        "components/**",
        "lib/**",
        "actions/**",
        "schemas/**",
        "styles/**",
        "next.config.*",
        "tailwind.config.*",
        "tsconfig.json"
      ],
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "AUTH_SECRET",
        "NEXTAUTH_URL",
        "NEXT_PUBLIC_APP_URL",
        "PORT",
        "STRIPE_WEBHOOK_SECRET",
        "STRIPE_SECRET_KEY",
        "STRIPE_PUBLISHABLE_KEY",
        "REDIS_URL"
      ],
      "outputLogs": "new-only"
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": [
        "src/**/*.{js,ts,tsx}",
        "app/**/*.{js,ts,tsx}",
        "pages/**/*.{js,ts,tsx}",
        "components/**/*.{js,ts,tsx}",
        "lib/**/*.{js,ts,tsx}",
        "actions/**/*.{js,ts,tsx}",
        "schemas/**/*.{js,ts,tsx}",
        "eslint.config.js",
        ".eslintrc.*",
        "tsconfig.json",
        "package.json"
      ],
      "outputs": [],
      "cache": true,
      "persistent": false,
      "outputLogs": "errors-only"
    },
    "format": {
      "dependsOn": ["^format"],
      "inputs": [
        "src/**/*.{js,ts,tsx,json,md,yml,yaml}",
        "app/**/*.{js,ts,tsx,json,md,yml,yaml}",
        "pages/**/*.{js,ts,tsx,json,md,yml,yaml}",
        "components/**/*.{js,ts,tsx,json,md,yml,yaml}",
        "lib/**/*.{js,ts,tsx,json,md,yml,yaml}",
        "actions/**/*.{js,ts,tsx,json,md,yml,yaml}",
        "schemas/**/*.{js,ts,tsx,json,md,yml,yaml}",
        "**/*.{json,md,yml,yaml}",
        ".prettierrc*",
        "prettier.config.*"
      ],
      "outputs": [],
      "cache": true,
      "persistent": false,
      "outputLogs": "errors-only"
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.{js,ts,tsx}",
        "app/**/*.{js,ts,tsx}",
        "components/**/*.{js,ts,tsx}",
        "lib/**/*.{js,ts,tsx}",
        "__tests__/**",
        "**/*.test.*",
        "**/*.spec.*",
        "jest.config.*",
        "vitest.config.*",
        "setupTests.*"
      ],
      "outputs": ["coverage/**", "test-results/**", "junit.xml"],
      "cache": true,
      "persistent": false,
      "env": ["NODE_ENV", "CI", "REDIS_URL"]
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "inputs": ["tests/**", "e2e/**", "playwright.config.*", "global-setup.*", "global-teardown.*"],
      "outputs": ["test-results/**", "playwright-report/**"],
      "cache": false,
      "persistent": false,
      "env": ["NODE_ENV", "CI", "PLAYWRIGHT_BASE_URL", "DATABASE_URL", "AUTH_SECRET", "NEXTAUTH_URL"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.{ts,tsx}",
        "app/**/*.{ts,tsx}",
        "pages/**/*.{ts,tsx}",
        "components/**/*.{ts,tsx}",
        "lib/**/*.{ts,tsx}",
        "actions/**/*.{ts,tsx}",
        "schemas/**/*.{ts,tsx}",
        "types/**/*.{ts,tsx}",
        "tsconfig.json",
        "tsconfig.*.json",
        "next-env.d.ts"
      ],
      "outputs": ["tsconfig.tsbuildinfo"],
      "cache": true,
      "persistent": false,
      "outputLogs": "errors-only"
    },
    "clean": {
      "cache": false,
      "persistent": false,
      "outputs": [],
      "inputs": []
    },
    "db:generate": {
      "cache": true,
      "persistent": false,
      "env": ["DATABASE_URL"],
      "inputs": ["drizzle/**", "schema/**", "drizzle.config.*"],
      "outputs": ["migrations/**", "drizzle/**/*.d.ts"]
    },
    "db:migrate": {
      "dependsOn": ["db:generate"],
      "cache": false,
      "persistent": false,
      "env": ["DATABASE_URL"],
      "inputs": ["migrations/**", "drizzle.config.*"],
      "outputs": []
    },
    "db:seed": {
      "dependsOn": ["db:migrate"],
      "cache": false,
      "persistent": false,
      "env": ["DATABASE_URL"],
      "inputs": ["seed/**", "scripts/seed.*"],
      "outputs": []
    },
    "db:studio": {
      "cache": false,
      "persistent": true,
      "env": ["DATABASE_URL"],
      "inputs": [],
      "outputs": []
    },
    "db:push": {
      "cache": false,
      "persistent": false,
      "env": ["DATABASE_URL"],
      "inputs": ["drizzle/**", "schema/**", "drizzle.config.*"],
      "outputs": []
    },
    "check:requirements": {
      "cache": true,
      "persistent": false,
      "inputs": ["package.json", "bun.lockb", ".nvmrc", ".node-version"],
      "outputs": [],
      "outputLogs": "errors-only"
    },
    "qa:fast": {
      "dependsOn": ["format", "lint"],
      "cache": true,
      "persistent": false,
      "inputs": [],
      "outputs": [],
      "outputLogs": "errors-only"
    },
    "qa:build": {
      "dependsOn": ["qa:fast", "typecheck", "build"],
      "cache": true,
      "persistent": false,
      "inputs": [],
      "outputs": [],
      "outputLogs": "errors-only"
    },
    "qa:ci": {
      "dependsOn": ["check:requirements", "qa:build", "test"],
      "cache": true,
      "persistent": false,
      "inputs": [],
      "outputs": [],
      "outputLogs": "hash-only"
    },
    "qa:full": {
      "dependsOn": ["qa:ci", "test:e2e", "qa:security"],
      "cache": false,
      "persistent": false,
      "inputs": [],
      "outputs": [],
      "outputLogs": "full"
    },
    "qa:security": {
      "cache": true,
      "persistent": false,
      "inputs": ["package.json", "bun.lockb"],
      "outputs": ["audit-report.*", "security-report.*"],
      "outputLogs": "errors-only"
    },
    "deploy": {
      "dependsOn": ["qa:ci"],
      "cache": false,
      "persistent": false,
      "env": [
        "NODE_ENV",
        "VERCEL_TOKEN",
        "VERCEL_ORG_ID",
        "VERCEL_PROJECT_ID",
        "DATABASE_URL",
        "NEXT_PUBLIC_APP_URL",
        "AUTH_SECRET",
        "NEXTAUTH_URL",
        "STRIPE_WEBHOOK_SECRET",
        "STRIPE_SECRET_KEY",
        "STRIPE_PUBLISHABLE_KEY"
      ],
      "inputs": [".vercel/**", "vercel.json"],
      "outputs": [".vercel/**"]
    }
  },
  "remoteCache": {
    "signature": true,
    "preflight": false,
    "timeout": 60
  }
}
